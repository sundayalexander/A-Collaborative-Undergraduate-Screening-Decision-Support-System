{% extends "base.html.twig" %}
{% block title %}Student - Admin Unit{% endblock %}
{% block body %}
	<div class="main-content">
		<!--left-fixed -navigation-->
		{{ include('student/navigation.html.twig',{page:"admin-unit"}) }}
		<!-- //header-ends -->
		<!-- main content start-->
		<div id="page-wrapper">
			<div class="main-page">
			<h3 class="title1" style="color: #F2B33F;">Admission Unit</h3>
					<div class="form-grids row widget-shadow" data-example-id="basic-forms"> 
						<div class="form-title">
							<h4>Update your personal data below:</h4>
						</div>

						<div class="form-body">
                            {{ form_start(form) }}
                                <table class="table table-responsive">
                                    <tr>
                                        <td>
                                            {{ form_row(form.first_name) }}
                                        </td>
                                        <td>
                                            {{ form_row(form.last_name) }}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            {{ form_row(form.middle_name) }}
                                        </td>
                                        <td>
                                            {{ form_row(form.dob) }}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            {{ form_row(form.email) }}
                                        </td>
                                        <td>
                                            {{ form_row(form.phone_number) }}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>
                                            {{ form_row(form.r_address) }}
                                        </td>
                                        <td>
                                            {{ form_row(form.p_address) }}
                                        </td>
                                    </tr>
                                    <tr>
                                        <td>{{ form_row(form.putme_score) }}</td>
                                    </tr>
                                    <tr>
                                        <td>
                                            <button style="width:100%;" type="submit" id="update" class="btn btn-primary" >
                                                <span class="fa fa-save"></span> Save and Next
                                            </button>
                                        </td>
                                    </tr>
                                </table>
                            {{ form_end(form) }}
						</div>
					</div>
			
			
				<div class="clearfix"> </div>
			</div>
		</div>
		<!--footer-->
		<div class="footer">
		   <p>&copy; 2018 | CSC Dept. AAUA. </p>
		</div>
        <!--//footer-->
	</div>
    {% endblock %}

    {% block javascripts %}
        <!-- Classie -->
        <script src="{{ asset('control_panel/js/classie.js') }}"></script>
        <script>
            let update = document.getElementById('update');
            update.onclick = function(){
                document.getElementById('student_registration_matric_no').disabled = false;
            }
            var menuLeft = document.getElementById( 'cbp-spmenu-s1' ),
                showLeftPush = document.getElementById( 'showLeftPush' ),
                body = document.body;

            showLeftPush.onclick = function() {
                classie.toggle( this, 'active' );
                classie.toggle( body, 'cbp-spmenu-push-toright' );
                classie.toggle( menuLeft, 'cbp-spmenu-open' );
                disableOther( 'showLeftPush' );
            };


            function disableOther( button ) {
                if( button !== 'showLeftPush' ) {
                    classie.toggle( showLeftPush, 'disabled' );
                }
            }
        </script>
        <!--scrolling js-->
        <script src="{{ asset('control_panel/js/jquery.nicescroll.js') }}"></script>
        <script src="{{ asset('control_panel/js/scripts.js') }}"></script>
        <!--//scrolling js-->
        <!-- Bootstrap Core JavaScript -->
        <script src="{{ asset('control_panel/js/bootstrap.js') }}"> </script>
    {% endblock %}
